@model OTTUI.Models.Customer

@{
    ViewData["Title"] = "Register";
}

<h1 class="Heading">🎉 We bring entertainment to your comfort place 🏡 </h1>
<br />
<h3 class="SubHeading"> Sign Up !!</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group SubHeading">
                <label asp-for="CustName" class="control-label"></label>
                <input asp-for="CustName" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" />
                <span asp-validation-for="CustName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group SubHeading">
                <label asp-for="CustEmail" class="control-label"></label>
                <input asp-for="CustEmail" class="form-control" type="email" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group SubHeading">
                <label asp-for="CustPassword" class="control-label"></label>
                <input asp-for="CustPassword" class="form-control" />
                <span asp-validation-for="CustPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group SubHeading">
                <label asp-for="CustPlan" class="control-label"></label>
                <select name="Plan" id="Plans" required>
                    <option value="1" selected >🥇 Gold 🥇</option>
                    <option value="2">🥈 Silver 🥈</option>
                    <option value="3">🥉 Bronze 🥉</option>
                </select>
                <span asp-validation-for="CustPlan" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
