@model OTTUI.Controllers.RatedMovie

@{
    ViewData["Title"] = "TopRated";
}

<h1 class="Heading" style="color:aliceblue">TopRated</h1>

<br />

<h2 class="SubHeading">5⭐ Rated :</h2>
<br />
<div class="row">
    @foreach (var item in Model.FiveStar)
    {
        <div class=" col-lg-4" style="padding-bottom:20px;">
            <div class="card inner-img" style="width: 15rem;height:25rem">
                <img  class="card-img-top" src="@Url.Content(@item.MovieImage)" style="width:100%;height:250px">
                <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text" style="font-family: 'Noto Serif', serif;">Movie Category : @item.MovieCategory</p>
                    <a href="@item.MovieContent" class="btn btn-primary">Watch Now</a>
                </div>
            </div>
        </div>
        <br />

    }
</div>
<br />



